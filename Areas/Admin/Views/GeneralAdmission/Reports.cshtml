                    <input type="radio" style="accent-color: dodgerblue" value="main" @(sortToggle == "General" ? "checked" : "")>
                    <label style="margin-bottom: 0">General</label>
                </div>
            </a>
            <a asp-action="Reports" asp-controller="GeneralAdmission" asp-route-sortToggle="Patient Interviewed" asp-route-sortByMonth="@sortByMonth"
