@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="width: 60%;">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 60%;">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (sortToggle == "General")
{
    @await Html.PartialAsync("Partials/_ReportsGeneral", Model)
}
else if (sortToggle == "Patient Interviewed")
{
    @await Html.PartialAsync("Partials/_ReportsPatientInterviewed", Model)
}
else if (sortToggle == "Total Interviewed")
{
    @await Html.PartialAsync("Partials/_ReportsTotalInterviewed", Model)
}
else if (sortToggle == "PHIC")
{
    @await Html.PartialAsync("Partials/_ReportsPHIC", Model)
}
else if (sortToggle == "Referral/Old/New/PWD")
{
    @await Html.PartialAsync("Partials/_ReportsReferralOldNewPWD", Model)
}
