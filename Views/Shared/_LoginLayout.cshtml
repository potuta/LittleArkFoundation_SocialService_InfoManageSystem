<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Password Reset</title>
    <link rel="icon" type="image/png" href="~/resources/NCH-Logo.png" />

    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <link href="~/lib/bootstrap/bootstrap-5.3.0-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons-1.13.1/bootstrap-icons.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #44ac5c;
        }

        .form-box {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        h2 {
            text-align: center;
        }

        .form-box h2 {
            margin-bottom: 20px;
            color: #333;
        }

        .form-box .btn-primary {
            width: 100%;
        }

        .form-box a {
            display: block;
            text-align: center;
            margin-top: 10px;
            cursor: pointer;
            color: #44ac5c;
            text-decoration: none;
        }

            .form-box a:hover {
                text-decoration: underline;
            }

        .readonly-input {
            background-color: #e9ecef !important;
            cursor: not-allowed;
        }

        .btn {
            width: 100%;
            max-width: 400px;
        }
    </style>
</head>
<body>
    @RenderBody()
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/lib/bootstrap/bootstrap-5.3.0-dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
